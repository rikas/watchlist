<div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
  <div class="bg-white rounded shadow h-100">
    <%= image_tag movie.poster_url, alt: movie.title, class: 'movie-img rounded-top' %>

    <div class="p-3 rounded-bottom d-flex flex-column">
      <strong>
        <%= movie.title %>

        <span class="text-muted font-weight-normal">â€¢
          <%= movie.rating %> <i class="fas fa-star text-info"></i>
        </span>
      </strong>

      <small class="text-muted">
        <%= movie.overview %>
      </small>

      <div class="d-flex align-items-end justify-content-between pt-4">
        <div>
          <i class="fas fa-quote-left mr-2"></i>
          <small class="flex-grow-1"><%= bookmark.comment %></small>
        </div>

        <small class="text-right flex-shrink-0">
          <%= link_to bookmark_path(bookmark), method: :delete,
            data: { confirm: "Are you sure you want to remove #{movie.title} from your #{list.name} list"},
            class: 'text-danger' do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </small>
      </div>
    </div>
  </div>
</div>
